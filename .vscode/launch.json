    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/soupbuild/outputs/Windows/debug/PlumbingDisaster.exe",
            "args": ["assets/Scenes/Game.json"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/soupbuild/outputs/Windows/debug",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "C:\\msys64\\mingw64\\bin\\gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Run Release",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/soupbuild/outputs/Windows/release/PlumbingDisaster.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/soupbuild/outputs/Windows/release",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "C:\\msys64\\mingw64\\bin\\gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
